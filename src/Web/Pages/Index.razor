@page "/"
@using Web.Services
@inject IJSRuntime JS

<h3>Photometric Tools</h3>

<p>Upload an IES file to preview photometric data.</p>

<InputFile OnChange="OnFileSelected" />

@if (ies != null)
{
    <hr />
    <p><b>Peak intensity:</b> @ies.PeakCandela cd</p>
    <p><b>Beam angle (50%):</b> @ies.BeamAngleÂ°</p>
}

@if (!string.IsNullOrEmpty(error))
{
    <p style="color:red">@error</p>
}

@code {
    IesData? ies;
    string? error;

    async Task OnFileSelected(InputFileChangeEventArgs e)
    {
        try
        {
            error = null;
            ies = null;

            var file = e.File;
            using var stream = file.OpenReadStream();
            using var reader = new StreamReader(stream);

            var text = await reader.ReadToEndAsync();
            ies = IesParser.Parse(text);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }
}
